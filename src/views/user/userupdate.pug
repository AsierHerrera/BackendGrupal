extends ../layout

block content 
    if error 
        p(class="error")= error
    if usuario
        form(action="/user/"+usuario.User_id, method="post") 
            label(for="Name") Nombre 
            input(id="Name" type="text" name="Name" value=usuario.Name) 
            label(for="Is_Admin") Es administrador?
            input#Is_Admin(type="checkbox", name="Is_Admin" checked=usuario.Is_Admin ? true:false)
            label(for="Email") Email
            input#Email(type="text", name="Email" value=usuario.Email)              
            label(for="Password") Password 
            input(id="Password" type="text" name="Password" value=usuario.Password) 
            button(type="submit") Guardar
