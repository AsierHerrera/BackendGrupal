extends ../layout

block content
  .container
    h1= name
    h2(class="layout-title") Crear Personaje
    if error 
      p(class="error")= error
    form(action="/character/mapa", method="get")
      input(type="hidden", value=nombre, name="Name")
      input(type="hidden", value=race, name="Race_id")
      label(for="Weapon_id") Arma:
      select(id="Weapon_id", name="Weapon_id")
        each arma in armas 
          option(value=arma.Weapon_id)= arma.Name
      button.btn(type="submit") Continuar

    a(href="/character/raza")
      button.btn Volver 
