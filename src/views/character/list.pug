extends ../layout

block content 
    .container

        h1 Lista de personajes
        if error 
            p.error= error 
        if data
            .container
                section(class="mostrar-tarjetas")  
                    each character in data  
                        div
                            p=character.Name
                            p= "Raza: " + character.raza.Name
                            p= "Arma: " + character.arma.Name
                            form(action=`/character/enemyList` method="get")
                                input(type="hidden", id="Character_id", name="Character_id", value=character.Character_id)
                                button.play-button Jugar                              
                            form(action=`/character/${character.Character_id}/remove`, method="post" onsubmit="return confirm('R U sure?');")
                                button.btn(type="submit") Borrar                 
                a(href="./character/raza")
                    button.btn-crear Crear personaje