extends ../layout

block content
  .container
    h1= name
    h2(class="layout-title") Crear Personaje
    if error 
      p(class="error")= error
    form(action="/character/create", method="post")
      input(type="hidden", id="raza-id", name="Race_id", value=race)
      input(type="hidden", name="Weapon_id", value=weapon)
      label(for="Map_id") Mapa:
      select(id="Map_id", name="Map_id")
        each mapa in mapas 
          option(value=mapa.Map_id)= mapa.Name
      label(for="Name") Nombre:
      input(type="text", id="Name", name="Name")
      button.btn(type="submit") Comenzar
      
    a#btn-volver(href="/character/raza")
      button.btn Volver 

  script(src='/scripts/obtenerId.js')
