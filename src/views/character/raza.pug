extends ../layout

block content
  .container
    h2(class="layout-title") Crear Personaje
    if error 
      p(class="error")= error
    form(action="/character/armas", method="get")
      //- Men√∫ desplegable para la raza
      label(for="Race_id") Raza:
      select(id="Race_id", name="Race_id")
        each raza in razas 
          option(value=raza.Race_id)= raza.Name
      button.btn(type="submit") Continuar
    a(href="/character")
      button.btn Volver


